<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/lblName"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lblName"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/lblDate"
        android:text="Expected Due Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/lblName"/>

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lblDate"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="20dip"
        android:layout_below="@id/txtName"/>


    <TextView
        android:id="@+id/lblCurrentWeek"
        android:text="Current Week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/lblDate"/>

    <TextView
        android:id="@+id/txtCurrentWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDate"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="54dp"
        android:layout_toRightOf="@id/lblCurrentWeek" />


    <TextView
        android:id="@+id/lblCurrentTri"
        android:text="Trimester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/lblCurrentWeek"/>

    <TextView
        android:id="@+id/txtCurrentTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lblCurrentTri"
        android:layout_marginLeft="82dp"
        android:layout_marginBottom="20dip"
        android:layout_below="@id/txtCurrentWeek"/>

</RelativeLayout>