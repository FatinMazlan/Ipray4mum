<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fatin.ipray4mum.AlfatihahEnglish">

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/iconplay"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/txtEnglish"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <ImageView
        android:id="@+id/ivPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/iconpause"
        android:visibility="invisible"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/txtEnglish"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <!--><ImageView
        android:id="@+id/ivStop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_toRightOf="@+id/ivPlay"
        android:src="@drawable/iconstop"
        android:layout_below="@+id/txtEnglish"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
        <-->


    <ImageView
        android:id="@+id/ivUnflag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/unflagicon"
        android:layout_below="@+id/txtEnglish"
        android:layout_marginStart="100dp"
        android:layout_toRightOf="@+id/ivPlay"
        android:layout_marginLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <ImageView
        android:id="@+id/ivFlag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/flagicon"
        android:layout_below="@+id/txtEnglish"
        android:layout_marginStart="50dp"
        android:layout_toRightOf="@+id/ivUnfav"
        android:layout_marginLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtVerse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="right"
        android:text="Quran Verse"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:text="English Translation"
        android:textSize="15sp"
        android:textColor="#050ca5"
        android:textStyle="italic"
        android:layout_below="@+id/txtVerse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>